<div id="articles-index-page">
  <ul>
    <% @articles.each do |article| %>
      <li class="col-8">
        <%= article.date %>
        <%= article.title %>
        <%= article.description %>
        <%= link_to "Delete",
              article_path(article),
              method: :delete,
              data: { confirm: "Are you sure?" } %>
      </li>
    <% end %>
  </ul>
</div>
